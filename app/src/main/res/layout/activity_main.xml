<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jujiiz.testapp.testapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="#e2e2e2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvQNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="@string/QNo"/>
        <TextView
            android:id="@+id/tvQuestionField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="@string/question"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnChoice1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/choice1"/>

            <Button
                android:id="@+id/btnChoice3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/choice3"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnChoice2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/choice2"/>

            <Button
                android:id="@+id/btnChoice4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/choice4"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
